<odoo>
    <record forcecreate="True" id="ir_cron_alert_expiry_date" model="ir.cron">
        <field name="name">Expiration quotation: cron</field>
        <field name="model_id" ref="sale.model_sale_order"/>
<!--        <field name="nextcall">2021-04-01 00:00:00</field>-->
        <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 09:00:00')"/>
        <field name="state">code</field>
        <field name="code">model.alert_mail_expiration()</field>
        <field eval="True" name="active"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>


</odoo>