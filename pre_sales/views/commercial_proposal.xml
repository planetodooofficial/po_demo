<odoo>
    <template id="commercial_proposal_layout">
        <t t-if="not o" t-set="o" t-value="doc"/>

        <t t-if="not company">
            <!-- Multicompany -->
            <t t-if="company_id">
                <t t-set="company" t-value="company_id"/>
            </t>
            <t t-elif="o and 'company_id' in o and o.company_id.sudo()">
                <t t-set="company" t-value="o.company_id.sudo()"/>
            </t>
            <t t-else="else">
                <t t-set="company" t-value="res_company"/>
            </t>
        </t>

        <t t-call="pre_sales.commercial_proposal_header">
            <t t-raw="0"/>
        </t>

    </template>
    <template id="commercial_proposal_header">
        <div t-attf-class="header o_company_#{company.id}_layout" t-att-style="report_header_style">
            <div class="o_boxed_header" style="border-bottom:3px solid #0075B0;">
                <div class="row mb8">
                    <div class="col-6">
                        <h4 class="mt0" t-field="company.report_header"/>
                        <div name="company_address" class="float-left mb4">
                            <img src="/pre_sales/static/img/img_logo.png" style="width:110px;height:100px;"/>

                        </div>
                    </div>
                    <div class="col-6 text-right mb4">
                        M/s. SecurEyes Techno Services Pvt. Ltd.
                        <br/>
                        4 th Floor, Delta Block, Sigma Soft Tech Park,
                        <br/>
                        Whitefield Main Road, Varathur Post,
                        <br/>
                        Bangalore – 560 066
                        <br/>
                        CIN Number: U72900KA2006PTC040519

                    </div>
                </div>
            </div>
        </div>

        <div t-attf-class="article o_report_layout_boxed o_company_#{company.id}_layout"
             t-att-data-oe-model="o and o._name" t-att-data-oe-id="o and o.id"
             t-att-data-oe-lang="o and o.env.context.get('lang')">
            <div class="pt-5">
                <!-- This div ensures that the address is not cropped by the header. -->
                <t t-call="web.address_layout"/>
            </div>
            <t t-raw="0"/>
        </div>

        <div t-attf-class="footer o_boxed_footer o_company_#{company.id}_layout">
            <div style="width: 100%; display: table;border-color:#0075B0;border-top:3px solid #0075B0;">
                <div style="display: table-row; height: 100px;">
                    <div style="width: 70%; display: table-cell; ">
                        <b>Registered Office</b>
                        <br/>
                        SecurEyes Techno Services Pvt. Ltd.
                        <br/>
                        # 3S, 3rd Floor, 51/27, Swamy Towers
                        Chinapanahalli,
                        <br/>
                        Outer Ring Road,Bangalore – 560037
                    </div>
                    <div style="display: table-cell;">
                        <img src="/pre_sales/static/img/phone.png" style="width:30px;height:30px;"/>
                        +91-80-41264078/41612612
