<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="sales_reason_master_tree" model="ir.ui.view">
        <field name="name">sales_reason_master_tree</field>
        <field name="model">reason.master</field>
        <field name="arch" type="xml">
            <tree string="Reason Master" editable="bottom">
                <field name="reason"/>
            </tree>
        </field>
    </record>


    <record id="sales_reason_master_action" model="ir.actions.act_window">
        <field name="name">Reason master</field>
        <field name="res_model">reason.master</field>
        <field name="view_mode">tree</field>
    </record>

    <menuitem name="Reason Master" action="sales_reason_master_action" id="sales_reason_menu" sequence="1"
              parent="sale.menu_sale_config"/>

</odoo>