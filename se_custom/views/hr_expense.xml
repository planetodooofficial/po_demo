    <record id="hr_expense_search_view_inherit" model="ir.ui.view">
        <field name="name">hr.expense.search.view.inherit</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_search"/>
        <field name="arch" type="xml">
            <xpath expr="/search//filter[@name='my_team_expenses']" position="replace">
                <filter string="My Team" name="my_team_expenses" domain="['|',('employee_id.parent_id.user_id', '=', uid),('employee_id.department_id.delegated_manager_id', '=', uid)]" groups="hr_expense.group_hr_expense_team_approver" help="Expenses of Your Team Member"/>
<!--                <filter string="My Team" name="my_team_expenses" domain="['|',('employee_id.parent_id.user_id', '=', uid)]" groups="hr_expense.group_hr_expense_team_approver" help="Expenses of Your Team Member"/>-->
            </xpath>
        </field>
    </record>

    <record id="hr_expense_view_inherit" model="ir.ui.view">
        <field name="name">hr.expense.inherit</field>
        <field name="model">hr.expense</field>
        <field name="inherit_id" ref="hr_expense.hr_expense_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form//sheet//field[@name='date']" position="after">
                <field name="show_approve" invisible="1"/>
            </xpath>
            <xpath expr="/form//sheet//field[@name='company_id']" position="after">
                <field name="project"/>
            </xpath>
            <xpath expr="/form//header" position="inside">
                <button name="approve_entry" type="object" string="Approve" attrs="{'invisible':[('show_approve','!=',True)]}"/>
            </xpath>
        </field>
    </record>
</odoo>