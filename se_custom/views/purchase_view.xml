<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <data noupdate="1">
        <record id="custom_seq_purchase_order" model="ir.sequence">
            <field name="name">Custom Purchase Order</field>
            <field name="code">custom.purchase.order</field>
            <field name="padding">3</field>
            <field name="company_id" eval="False"/>
        </record>
    </data>

<!--    <record model="ir.rule" id="purchase.purchase_order_comp_rule">-->
<!--        <field name="name">Purchase Order multi-company</field>-->
<!--        <field name="model_id" ref="model_purchase_order"/>-->
<!--        <field name="domain_force">['|',('company_id', 'in', company_ids),('vendor_user_id','=',user.id)]</field>-->
<!--    </record>-->
    <record model="ir.rule" id="purchase.purchase_order_comp_rule">
        <field name="name">Purchase Order multi-company</field>
        <field name="model_id" ref="model_purchase_order"/>
        <field name="domain_force">['|',('company_id','=',False),'|',('company_id', 'in', company_ids),('vendor_user_id','=',user.id)]</field>
    </record>

    <record model="ir.rule" id="purchase.purchase_order_line_comp_rule">
        <field name="name">Purchase Order Line multi-company</field>
        <field name="model_id" ref="model_purchase_order_line"/>
        <field name="domain_force">['|',('company_id','=',False),'|',('company_id', 'in', company_ids),('order_id.vendor_user_id','=',user.id)]</field>
    </record>

    <record id="view_order_form_purchase_inherit" model="ir.ui.view">
        <field name="name">purchase.order.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="/form/sheet//field[@name='partner_id']" position="attributes">
                <attribute name="domain">[]</attribute>
            </xpath>
            <xpath expr="/form/sheet//field[@name='partner_ref']" position="after">
                <field name="vendor_user_id"/>
                <field name="pan_no" invisible="1"/>
                <field name="msme" invisible="1"/>
            </xpath>
        </field>
    </record>

    <record id="view_purchase_order_search_inherited" model="ir.ui.view">
        <field name="name">purchase.search.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.view_purchase_order_filter"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='name']" position="after">
                <field name="pan_no"/>
                <field name="msme"/>
            </xpath>
        </field>
    </record>
</odoo>