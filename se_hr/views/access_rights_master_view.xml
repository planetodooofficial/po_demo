<odoo>

    <!--tree view-->
    <record id="access_rights_master_tree_view" model="ir.ui.view">
        <field name="name">access.rights.master.tree.view</field>
        <field name="model">access.rights.master</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="right_ids" widget="many2many_tags"/>
            </tree>
        </field>
    </record>

    <!--    form view-->
    <record id="access_rights_master_form_view" model="ir.ui.view">
        <field name="name">access.rights.master.form.view</field>
        <field name="model">access.rights.master</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>

                            <field name="name"/>
                        </group>
                        <group>
                            <field name="right_ids" widget="many2many_tags"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>


    <!--Action Window-->

    <record id="access_rights_master_action" model="ir.actions.act_window">
        <field name="name">User Roles</field>
        <field name="res_model">access.rights.master</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="oe_view_non_content_create">
                Please define Role!</p>
        </field>
    </record>

    <menuitem id="access_rights_master_submenu" name="User Roles" action="access_rights_master_action" parent="hr.menu_human_resources_configuration"/>

</odoo>