<odoo>
    <record id="hr_employee_form_active_flag_view" model="ir.ui.view">
        <field name="name">hr_employee_form_active_flag_view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='coach_id']/.." position="inside">
                <field name="active_flag"/>
            </xpath>
        </field>
    </record>
    <record forcecreate="True" id="ir_cron_alert_orientation_join_orien_date" model="ir.cron">
        <field name="name">Joinee Employee orientation: cron</field>
        <field name="model_id" ref="bi_hr_employee_orientation.model_employee_orientation"/>
        <!--        <field name="nextcall">2021-04-01 00:00:00</field>-->
        <!--        <field name="nextcall" eval="(DateTime.now() + timedelta(days=1)).strftime('%Y-%m-%d 09:00:00')"/>-->
        <field name="state">code</field>
        <field name="code">model.alert_mail_doj()</field>
        <field eval="True" name="active"/>
        <field name="interval_number">1</field>
        <field name="interval_type">days</field>
        <field name="numbercall">-1</field>
    </record>
    <record id="orientation_form_view" model="ir.ui.view">
        <field name="name">orientation_form_view</field>
        <field name="model">employee.orientation</field>
        <field name="inherit_id" ref="bi_hr_employee_orientation.view_employee_orientation_form"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='confirm_visitor']" position="after">
                <button name="alert_mail_doj" string="Inform Mail"
                        type="object"/>
                <button name="alert_mail_dept" string="Inform Mail to IT Department"
                        type="object"/>
            </xpath>
        </field>
    </record>


</odoo>