<odoo>

    <record id="hr_employee_resignation_mail" model="ir.ui.view">
        <field name="name">hr_employee_resignation_mail</field>
        <field name="model">hr.resignation</field>
        <field name="inherit_id" ref="hr_resignation.employee_resignation_form"/>
        <field name="arch" type="xml">
             <xpath expr="//button[@name='approve_resignation']" position="after">
                <button name="reminder_resignation_manager" string="Reminder Mail to Manager"
                        attrs="{'invisible': [('state', '!=', 'confirm')]}"
                        type="object"/>
                 <button name="reminder_resignation_bhr" string="Reminder Mail to BHR Department"
                         attrs="{'invisible': [('state', '!=', 'confirm')]}"
                        type="object"/>
            </xpath>
        </field>
    </record>



</odoo>