<?xml version="1.0" encoding="utf-8"?>
<odoo>

	<template id="sh_annoucements_data_tbl" name="SH Annoucements Data">
		
		<div class="announcement_container" id="js_id_sh_annoucement_data_tbl_div">
			
			<t t-set="count" t-value="1"/>
			<t t-if="annoucements">
				<t t-foreach="annoucements" t-as="annoucement">
				
				
					<t t-if="count == 1">
						<t t-set="count" t-value="0"/>
						<div class="main_annoucement">
	             				<div class="annoucement_info">
	             					<div class="annoucement_para"><t t-esc="annoucement.name"/></div>
	             					<div class="annoucement_date"><t t-esc="annoucement.date.strftime('%d/%m/%Y')"/></div>
								</div>
	             		</div>
					</t>
					
					<t t-else="">
					<div class="main_annoucement another_announce">
				          <div class="annoucement_info">
				                  <div class="annoucement_para"><t t-esc="annoucement.name"/></div>
				                  <div class="annoucement_date"><t t-esc="annoucement.date.strftime('%d/%m/%Y')"/></div>
				           </div>
				     </div> 
					</t>
				</t>
			</t>
			
		</div>
		
	</template>

	<template id="sh_anniversary_data_tbl" name="SH Annivarsary Data">
		
		<div class="anniversary_box" id="js_id_sh_anniversary_data_tbl_div">
         	
         	<t if="employee_anni_dic">
	    		
	    		<t t-set="count" t-value="0"/>
	    		
	    		<t t-foreach="employee_anni_dic" t-as="employee_key">
	    			
	    			<t t-if="count==0">
	    				
	    				<div class="anniversary_conteiner_main">

				           <img class="anniversary_image"  t-att-src="'/web/image/hr.employee.public/' + str(employee_key.id)+ '/image_128'" 
				            alt=""></img>
				            <div class="anniversary_info">
				                <div class="anniversary_name_active"><t t-esc="employee_key.name"/></div>
				                <div class="anniversary_date_active"><t t-esc="employee_key.date_of_joining.strftime('%d-%m-%Y')"/></div>
				                <hr class="line"></hr>
				                <t t-if="employee_key.date_of_joining.strftime('%m-%d') == todays_date">
				                	<p class="anniversary_wish">Happy Anniversary..!!<span><img class="anniversary_wish_img" src="sh_hr_dashboard/static/src/image/6.png" width="8%" alt="" /></span></p>
				                </t>
				                <t t-else="">
				                	<p class="annivarsary_days" style="color:#fff;"><t t-esc="employee_anni_dic[employee_key]"/> Years Complete</p>
				                </t>
				            </div>
				        </div>
	    				
	    			</t>
	    			<t t-if="count==1 or count==2">
	    				 <div class="anniversary_conteiner_rest">
				            <img class="anniversary_image"  t-att-src="'/web/image/hr.employee.public/' + str(employee_key.id)+ '/image_128'" 
				            alt=""></img>
				            <div class="anniversary_info">
				                <div class="anniversary_name"><t t-esc="employee_key.name"/></div>
				                <div class="anniversary_date"><t t-esc="employee_key.date_of_joining.strftime('%d-%m-%Y')"/></div>
				                <hr class="line"></hr>
				                <p class="annivarsary_days"><t t-esc="employee_anni_dic[employee_key]"/> Years Complete</p>
				            </div>
				        </div>
	    			
	    			</t>
	    			<t t-set="count" t-value="count+1"/>
	    		</t>
	    		
	    	</t>
          						
        </div>
		
	</template>
	 <template id="sh_birthday_data_tbl" name="SH Birthday Data">
	 
	    <div class="birthday_box" id="js_id_sh_birthday_data_tbl_div">
	    	
	    	<t if="sort_employee_birthday_dic">
	    		
	    		<t t-set="count" t-value="0"/>
	    		
	    		<t t-foreach="sort_employee_birthday_dic" t-as="employee_key">
	    			
	    			<t t-if="count==0">
	    				
	    				
	    				<div class="birthday_conteiner_main">

				           <img class="birthday_image"  t-att-src="'/web/image/hr.employee.public/' + str(employee_key[0].id)+ '/image_128'" 
				            alt=""></img>
				            <div class="birthday_info">
				                <div class="birthday_name_active"><t t-esc="employee_key[0].name"/></div>
				                <div class="birthday_date_active"><t t-esc="employee_key[0].birthday.strftime('%d-%m-%Y')"/></div>
				                <hr class="line"></hr>
				                <t t-if="employee_key[1] == 0">
				                	<p class="birthday_wish">Happy Birthday..!!<span><img class="birthday_wish_img" src="sh_hr_dashboard/static/src/image/6.png" width="8%" alt="" /></span></p>
				                </t>
				                <t t-else="">
				                	<p class="birthday_days" style="color:#fff;"><t t-esc="employee_key[1]"/> Days Left</p>
				                </t>
				            </div>
				        </div>
	    				
	    			</t>
	    			<t t-if="count==1 or count==2">
	    				 <div class="birthday_conteiner_rest">
				            <img class="birthday_image"  t-att-src="'/web/image/hr.employee.public/' + str(employee_key[0].id)+ '/image_128'" 
				            alt=""></img>
				            <div class="birthday_info">
				                <div class="birthday_name"><t t-esc="employee_key[0].name"/></div>
				                <div class="birthday_date"><t t-esc="employee_key[0].birthday.strftime('%d-%m-%Y')"/></div>
				                <hr class="line"></hr>
				                <p class="birthday_days"><t t-esc="employee_key[1]"/> Days Left</p>
				            </div>
				        </div>
	    			
	    			</t>
	    			<t t-set="count" t-value="count+1"/>
	    		</t>
	    		
	    	</t>

	    </div>
	</template>
				                    				
				                    				
	 
	 <template id="sh_expense_data_tbl" name="SH Expense Data">
	  
			<div class="expence_container" id="js_id_sh_expense_data_tbl_div">
					<div class="row expence_heading">
						<div class="col-3">
							<p>Date</p>
						</div>
						<div class="col-3">
							<p>Subject</p>
						</div>
						<div class="col-3">
							<p>Amount</p>
						</div>   
						<div class="col-3">
							<p>Status</p>
						</div>                           								
					</div>
					<t t-if="expenses">
					
						<t t-foreach="expenses" t-as="expense">
						
							<div class="row expence_details">
							
								<div class="col-3">
                    				<p class="expence_date"><t t-if="expense.date"><t t-esc="expense.date.strftime('%d/%m/%Y')"/></t></p>
                    			</div>
                    			<div class="col-3">
                    				<p class="expence_name"><t t-esc="expense.name"/></p>
                    			</div>
                    			<div class="col-3">
                    				<p class="expence_amt"><t t-esc="expense.total_amount"/></p>
                    			</div>   
                    			<div class="col-3 col_space">
                    				<t t-if="expense.state =='draft'">
										<p><span class="payslip_tags status_yellow">To Submit</span></p>
									</t>
									<t t-if="expense.state =='reported'">
										<p><span class="payslip_tags status_yellow_green">Submitted</span></p>
									</t>
									<t t-if="expense.state =='approved'">
										<p><span class="payslip_tags status_light_green">Approved</span></p>
									</t>
									<t t-if="expense.state =='done'">
										<p><span class="payslip_tags status_green">Paid</span></p>
									</t>
									<t t-if="expense.state =='refused'">
										<p><span class="payslip_tags status_red">Refused</span></p>
									</t>
                    			</div>  
                    								
							</div>	
									
							
						</t>
						
					</t>
					<t t-else="">
						<div class="row">
               				<div class="col-12">
               					<p class="no_record">No records found!</p>
               				</div>
               			</div>
					</t>
					
			</div>
										     
   	 </template>   
   	 <template id="sh_attendance_data_tbl" name="SH Attendance Data">
	  
			<div class="paylip_container" id="js_id_sh_attendance_data_tbl_div">
				<div class="row payslip_heading">
						<div class="col-4">
                    		<p>Date</p>
                    	</div>
                    	<div class="col-4">
                    		<p>Sign in</p>
                    	</div>
                    	<div class="col-4">
                    		<p>Sign out</p>
                    	</div>																																			 														                  								
					</div>
					<t t-if="attendance_dic">
					
						<t t-foreach="attendance_dic" t-as="attendance">
						
							<div class="row payslip_details">
							
								<div class="col-4">
									<p class="attendance_date">
										<t t-if="attendance.check_in"><t t-esc="attendance.check_in.strftime('%d/%m/%Y')"/></t>
									</p>
								</div>
								
								<div class="col-4">
									<p class="attendance_in_time">
										<t t-if="attendance.check_in"><t t-esc="attendance_dic[attendance][0].strftime('%I:%M %p')"/></t>
									</p>
								</div>
								
								<div class="col-4">
									<p class="attendance_out_time">
										<t t-if="attendance.check_out"><t t-esc="attendance_dic[attendance][1].strftime('%I:%M %p')"/></t>
									</p>
								</div>                    								
							</div>
							
						</t>
						
					</t>
					<t t-else="">
						<div class="row">
               				<div class="col-12">
               					<p class="no_record">No records found!</p>
               				</div>
               			</div>
					</t>
			</div>
			
	</template>
	<template id="sh_leave_data_tbl" name="SH Leave Data">
	  
			<div class="expence_container"  id="js_id_sh_leave_data_tbl_div">
			   
				<div class="row expence_heading">
                    <div class="col-3">
                    	<p>From Date</p>
                    </div>
                    <div class="col-3">
                    	<p>To Date</p>
                    </div>
                    <div class="col-3 col_space">
                    	<p>Type</p>
                    </div>   
                    <div class="col-3">
                    	<p>Status</p>
                    </div>               								
                  </div>
					<t t-if="leaves">
					
						<t t-foreach="leaves" t-as="leave">
						
							<div class="row expence_details">
							
								<div class="col-3">
                    				<p class="leave_form"><t t-if="leave.request_date_from"><t t-esc="leave.request_date_from.strftime('%d/%m/%Y')"/></t></p>
                    			</div>
                    			<div class="col-3">
                    				<p class="leave_to"><t t-if="leave.request_date_to"><t t-esc="leave.request_date_to.strftime('%d/%m/%Y')"/></t></p>
                    			</div>
                    			<div class="col-3 col_space">
                    				<p class="leave_reason"><t t-esc="leave.holiday_status_id.name"/></p>
                    			</div>   
                    			<div class="col-3 col_space">
                    				<t t-if="leave.state =='draft'">
										<p><span class="payslip_tags status_yellow">To Submit</span></p>
									</t>
									<t t-if="leave.state =='confirm'">
										<p><span class="payslip_tags status_yellow_green">To Approve</span></p>
									</t>
									<t t-if="leave.state =='validate'">
										<p><span class="payslip_tags status_green">Approved</span></p>
									</t>
									<t t-if="leave.state =='cancel'">
										<p><span class="payslip_tags status_red">Cancelled</span></p>
									</t>
									<t t-if="leave.state =='refuse'">
										<p><span class="payslip_tags status_red">Refused</span></p>
									</t>
                    			</div>  
                    								
							</div>	
									
							
						</t>
						
					</t>
					<t t-else="">
						<div class="row">
               				<div class="col-12">
               					<p class="no_record">No records found!</p>
               				</div>
               			</div>
					</t>
			</div>
			
	</template>
</odoo>