<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record model="ir.ui.view" id="sh_hr_dashboard_kanban">
        <field name="name">sh.hr.dashboard.kanban</field>
        <field name="model">sh.hr.dashboard</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column o_hr_dashboard_kanban" create="0">
                <field name="name" />
                <field name="user_id" />
                <field name="leave_count" />
                <field name="allocated_leave_count" />
                <field name="attendance_count" />
                <field name="expense_count" />
                <field name="contract_count" />
                <templates>
                    <t t-name="kanban-box">
                        <section id="dashboard_counter">
                            <link rel="stylesheet" type="text/css" href="/sh_hr_dashboard/static/src/css/sh_deshboard.css" />
                            <script type="text/javascript" src="/sh_hr_dashboard/static/src/js/hr_dashboard.js"></script>
                            <!-- MAIN TITLE -->
                            <h1 class="main_title">Welcome <t t-esc="record.user_id.value" /></h1>
                            <!-- HEADER COUNTERS -->
                            <div class="row">
                                <div class="col counter_col">
                                    <a class="row" name="open_employee_leave" type="object">
                                        <div class="col-8">
                                            <p class="counter_title">LEAVES</p>
                                            <h1 class="counter_count"><t t-esc="record.leave_count.value" />/<t t-esc="record.allocated_leave_count.value" /></h1>
                                        </div>
                                        <div class="col-4 text-center">
                                            <img class="counter_img" src="sh_hr_dashboard/static/src/image/2.png" width="150%" alt="Leaves" />
                                        </div>
                                    </a>
                                </div>
                                <div class="col counter_col">
                                    <a class="row" name="open_employee_attendnace" type="object">
                                        <div class="col-8">
                                            <p class="counter_title">ATTENDANCE</p>
                                            <h1 class="counter_count"><t t-esc="record.attendance_count.value" /></h1>
                                        </div>
                                        <div class="col-4 text-center">
                                            <img class="counter_img" src="sh_hr_dashboard/static/src/image/3.png" width="150%" alt="Attendance" />
                                        </div>
                                    </a>
                                </div>
                                <div class="col counter_col">
                                    <a class="row" name="open_employee_expense" type="object">
                                        <div class="col-8">
                                            <p class="counter_title">EXPENCES</p>
                                            <h1 class="counter_count"><t t-esc="record.expense_count.value" /></h1>
                                        </div>
                                        <div class="col-4 text-center">
                                            <img class="counter_img" src="sh_hr_dashboard/static/src/image/4.png" width="150%" alt="Expences" />
                                        </div>
                                    </a>
                                </div>
                                <div class="col counter_col">
                                    <a class="row" name="open_employee_contract" type="object">
                                        <div class="col-8">
                                            <p class="counter_title">CONTRACTS</p>
                                            <h1 class="counter_count"><t t-esc="record.contract_count.value" /></h1>
                                        </div>
                                        <div class="col-4 text-center">
                                            <img class="counter_img" src="sh_hr_dashboard/static/src/image/5.png" width="150%" alt="Contracts" />
                                        </div>
                                    </a>
                                </div>
                            </div>

                            <div class="main_content">
                                <div class="row">
                                    <!-- BIRTHDAY PART -->
                                    <div class="col-lg-4 col-md-6 main_content_birthday">
                                        <div class="main_birthday_container">
                                            <h3 class="birthday_title">BIRTHDAY</h3>
                                            <div class="birthday_box" id="js_id_sh_birthday_data_tbl_div"></div>
                                        </div>
                                    </div>

                                    <!-- ANNIVERSARY PART -->
                                    <div class="col-lg-4 col-md-6 main_content_anniversary">
                                        <div class="main_anniversary_container">
                                            <h3 class="anniversary_title">ANNIVERSARY</h3>
                                            <div class="anniversary_box" id="js_id_sh_anniversary_data_tbl_div"></div>
                                        </div>
                                    </div>
                                    <!-- ANNOUCEMENT PART -->
                                    <div class="col-lg-4 col-md-6 announcement_part">
                                        <div class="announcement_box">
                                            <h3 class="annoucement_title">ANNOUNCEMENT</h3>
                                            <div class="announcement_container" id="js_id_sh_annoucement_data_tbl_div"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <!-- ATTENDANCE PART -->
                            <div class="section_table">
                                <div class="row">
                                    <div class="col-md-5 payslip_table">
                                        <div class="payslip_content">
                                            <div class="row expence_row">
                                                <div class="col-10">
                                                    <h3 class="payslip_title">ATTENDANCE</h3>
                                                </div>
                                                <div class="col-2">
                                                    <button class="btn" name="create_attendance" type="object"><i title="plus" class="fa fa-plus"></i></button>
                                                </div>
                                            </div>

                                            <div class="paylip_container" id="js_id_sh_attendance_data_tbl_div"></div>
                                        </div>
                                    </div>

                                    <!-- LEAVES PART -->
                                    <div class="col-md-7 expence_table">
                                        <div class="expence_content">
                                            <div class="row expence_row">
                                                <div class="col-10">
                                                    <h3 class="expence_title">LEAVES</h3>
                                                </div>
                                                <div class="col-2">
                                                    <button class="btn" name="create_leave" type="object"><i title="plus" class="fa fa-plus"></i></button>
                                                </div>
                                            </div>
                                            <div class="expence_container" id="js_id_sh_leave_data_tbl_div"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="section_table">
                                <div class="row">
                                    <!-- EXPENCE PART -->
                                    <div class="col-md-7 expence_table">
                                        <div class="expence_content">
                                            <div class="row expence_row">
                                                <div class="col-10">
                                                    <h3 class="expence_title">EXPENCES</h3>
                                                </div>
                                                <div class="col-2">
                                                    <button class="btn" name="create_expense" type="object"><i title="plus" class="fa fa-plus"></i></button>
                                                </div>
                                            </div>
                                            <div class="expence_container" id="js_id_sh_expense_data_tbl_div"></div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </section>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="sh_hr_dashboard_form" model="ir.ui.view">
        <field name="name">sh.hr.dashboard.form</field>
        <field name="model">sh.hr.dashboard</field>
        <field name="arch" type="xml">
            <form string="HR Dashboard">
                <group string="HR Dashboard">
                    <group>
                        <field name="name" />
                    </group>
                </group>
            </form>
        </field>
    </record>
    <record id="sh_hr_dashboard_tree" model="ir.ui.view">
        <field name="name">sh.hr.dashboard.tree.view</field>
        <field name="model">sh.hr.dashboard</field>
        <field name="arch" type="xml">
            <tree string="HR Dashboard">
                <field name="name" />
            </tree>
        </field>
    </record>
    <!-- Actions -->
    <record id="sh_hr_dashboard_action" model="ir.actions.act_window">
        <field name="name">HR Dashboard</field>
        <field name="res_model">sh.hr.dashboard</field>
        <field name="res_id" ref="sh_hr_dashboard.sh_dahsboard_rec_1" />
        <field name="view_mode">kanban</field>
    </record>

    <!-- Menus -->
    <menuitem id="sh_hr_dashboard_action_menu" name="HR Dashboard" action="sh_hr_dashboard_action" sequence="10" />
</odoo>
