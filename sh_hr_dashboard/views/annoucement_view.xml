<?xml version ="1.0" encoding="utf-8"?>

<odoo>
    <record id="sh_hr_employee_form_view_inherit" model="ir.ui.view">
        <field name="name">sh.employee.form.view</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form" />
        <field name="arch" type="xml">
            <field name="coach_id" position="after">
                <field name="date_of_joining" />
            </field>
        </field>
    </record>
    <record id="sh_annoucement_form_view" model="ir.ui.view">
        <field name="name">sh.annoucement.form.view</field>
        <field name="model">sh.annoucement</field>
        <field name="arch" type="xml">
            <form string="Annoucement">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "active"}' />
                        </button>
                    </div>
                    <group>
                        <field name="name" />
                        <field name="date" />
                        <field name="sequence" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="sh_annoucement_tree_view" model="ir.ui.view">
        <field name="name">sh.annoucement.tree.view</field>
        <field name="model">sh.annoucement</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle" />
                <field name="name" />
                <field name="date" />
            </tree>
        </field>
    </record>

    <record model="ir.actions.act_window" id="sh_annoucement_action">
        <field name="name">Announcement</field>
        <field name="res_model">sh.annoucement</field>
        <field name="view_mode">tree,form</field>
        <field name="type">ir.actions.act_window</field>
    </record>

    <menuitem id="sh_annoucement_action_menu" groups="hr.group_hr_user" sequence="15" action="sh_annoucement_action" />
</odoo>
